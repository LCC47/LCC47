{
  "manifest_version": 3,
  "name": "Stickman Pet",
  "version": "1.0",
  "description": "讓火柴人跟在滑鼠後走來走去",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pet.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
